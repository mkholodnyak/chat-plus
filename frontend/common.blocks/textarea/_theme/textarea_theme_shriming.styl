.textarea_theme_shriming
    width 100%
    height inherit
    resize none
    box-sizing border-box
    display block
    border none
    font 13px Arial
    padding 9px 50px 9px 13px
    outline none
    border-top 1px solid #efefef
    background $light_gray_color
    color $black_text_color
    line-height 30px

    &:focus
        box-shadow inset 0 0 0 1px $primary_color

